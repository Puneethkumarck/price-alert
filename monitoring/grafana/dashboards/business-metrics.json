{
  "uid": "price-alert-business-metrics",
  "title": "Price Alert – Business Metrics",
  "description": "Business-level counters and gauges for the Price Alert System",
  "tags": ["price-alert", "business"],
  "timezone": "browser",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "refresh": "10s",
  "schemaVersion": 39,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "application",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(jvm_info, application)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "title": "Alert API",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Alerts Created (rate/min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "axisCenteredZero": false,
            "showPoints": "auto",
            "pointSize": 5
          },
          "unit": "opm"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(alerts_created_total{application=~\"$application\"}[1m]) * 60",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Alerts Updated (rate/min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5
          },
          "unit": "opm"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(alerts_updated_total{application=~\"$application\"}[1m]) * 60",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Alerts Deleted (rate/min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5
          },
          "unit": "opm"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(alerts_deleted_total{application=~\"$application\"}[1m]) * 60",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Evaluator",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "title": "Ticks Processed (rate/sec)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5
          },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(evaluator_ticks_processed_total{application=~\"$application\"}[1m])",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Alerts Triggered (rate/min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "auto",
            "pointSize": 5
          },
          "unit": "opm"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(evaluator_alerts_triggered_total{application=~\"$application\"}[1m]) * 60",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Symbols in Index",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 5000 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "evaluator_index_symbols{application=~\"$application\"}",
          "legendFormat": "{{application}}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "Alerts in Index",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10000 },
              { "color": "red", "value": 50000 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "evaluator_index_alerts{application=~\"$application\"}",
          "legendFormat": "{{application}}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "Notification Persister",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false
    },
    {
      "title": "Notifications Persisted (rate/min)",
