{
  "uid": "price-alert-jvm-overview",
  "title": "Price Alert – JVM Overview",
  "description": "JVM health, GC, threads, CPU, and HTTP metrics across all Price Alert services",
  "tags": ["price-alert", "jvm", "spring-boot"],
  "timezone": "browser",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "refresh": "10s",
  "schemaVersion": 39,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "application",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(jvm_info, application)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(jvm_info{application=~\"$application\"}, instance)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "title": "Memory",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Heap Memory Used",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never",
            "axisCenteredZero": false
          },
          "unit": "bytes"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "sum by (application, instance) (jvm_memory_used_bytes{application=~\"$application\", instance=~\"$instance\", area=\"heap\"})",
          "legendFormat": "{{application}} used – {{instance}}"
        },
        {
          "datasource": "Prometheus",
          "expr": "sum by (application, instance) (jvm_memory_max_bytes{application=~\"$application\", instance=~\"$instance\", area=\"heap\"})",
          "legendFormat": "{{application}} max – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Heap Usage %",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "orange", "value": 85 },
              { "color": "red", "value": 95 }
            ]
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "sum by (application) (jvm_memory_used_bytes{application=~\"$application\", instance=~\"$instance\", area=\"heap\"}) / sum by (application) (jvm_memory_max_bytes{application=~\"$application\", instance=~\"$instance\", area=\"heap\"})",
          "legendFormat": "{{application}}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "title": "Non-Heap Memory Used",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "bytes"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "sum by (application, instance) (jvm_memory_used_bytes{application=~\"$application\", instance=~\"$instance\", area=\"nonheap\"})",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "CPU & Threads",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false
    },
    {
      "title": "Process CPU Usage",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "process_cpu_usage{application=~\"$application\", instance=~\"$instance\"}",
          "legendFormat": "{{application}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "Live Threads",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 300 }
            ]
          },
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "jvm_threads_live_threads{application=~\"$application\", instance=~\"$instance\"}",
          "legendFormat": "{{application}}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "Thread States",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 30,
            "gradientMode": "none",
            "spanNulls": false,
            "showPoints": "never",
            "stacking": { "mode": "normal", "group": "A" }
          },
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "jvm_threads_states_threads{application=~\"$application\", instance=~\"$instance\"}",
          "legendFormat": "{{application}} {{state}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull"] }
      }
    },
    {
      "title": "CPU Usage (current)",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 14 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 0.8 }
            ]
          },
          "unit": "percentunit"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "process_cpu_usage{application=~\"$application\", instance=~\"$instance\"}",
          "legendFormat": "{{application}}"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "title": "Garbage Collection",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false
    },
    {
      "title": "GC Pause Rate (pauses/sec)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 50,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(jvm_gc_pause_seconds_count{application=~\"$application\", instance=~\"$instance\"}[1m])",
          "legendFormat": "{{application}} {{cause}} {{action}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "GC Pause Duration (sum seconds/min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 50,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(jvm_gc_pause_seconds_sum{application=~\"$application\", instance=~\"$instance\"}[1m])",
          "legendFormat": "{{application}} {{cause}} {{action}} – {{instance}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "HTTP Server",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false
    },
    {
      "title": "HTTP Request Rate by URI (req/sec)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "sum by (application, uri, method, status) (rate(http_server_requests_seconds_count{application=~\"$application\", instance=~\"$instance\", uri!~\"/actuator.*\"}[1m]))",
          "legendFormat": "{{application}} {{method}} {{uri}} [{{status}}]"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "HTTP P95 Latency by URI",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.95, sum by (application, uri, le) (rate(http_server_requests_seconds_bucket{application=~\"$application\", instance=~\"$instance\", uri!~\"/actuator.*\"}[5m])))",
          "legendFormat": "{{application}} {{uri}} p95"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "HTTP Error Rate (5xx/sec)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "red" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 25,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "sum by (application, uri) (rate(http_server_requests_seconds_count{application=~\"$application\", instance=~\"$instance\", status=~\"5..\", uri!~\"/actuator.*\"}[1m]))",
          "legendFormat": "{{application}} {{uri}}"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "title": "HTTP P50 Latency by URI",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "scheme",
            "spanNulls": false,
            "showPoints": "never"
          },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.50, sum by (application, uri, le) (rate(http_server_requests_seconds_bucket{application=~\"$application\", instance=~\"$instance\", uri!~\"/actuator.*\"}[5m])))",
          "legendFormat": "{{application}} {{uri}} p50"
        }
      ],
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    }
  ]
}
